<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="sinar.project"
      metal:use-macro="context/main_template/macros/master">
<body>
    <metal:block fill-slot="content-core">

        <table class="listing" summary="Project Summary">
            <tr class="odd">
                <td>Start Date</td>
                <td tal:content="context/project_start_date | nothing"></td>
            </tr>
            <tr class="even">
                <td>End Date</td>
                <td tal:content="context/project_end_date | nothing"></td>
            </tr>

        </table>
        
        <div tal:content="structure context/text/output | nothing"></div>

        <div class="container">
            <div class="row align-items-start">
                <div class="col-md-4" tal:condition="view/updates">
                    <div class="card" style="width: 18rem;">
                      <div class="card-header">
                        Updates
                      </div>
                      <ul class="list-group list-group-flush">
                          <li class="list-group-item"
                                     tal:repeat="item view/updates">
                              <a tal:content="item/title"
                                 tal:attributes="href item/absolute_url"
                                  ></a>
                         </li>
                      </ul>
                      </div>
                </div>
                <div class="col-md-4" tal:condition="view/events">
                    <div class="card" style="width: 18rem;">
                      <div class="card-header">
                        Events
                      </div>
                      <ul class="list-group list-group-flush">
                          <li class="list-group-item"
                                     tal:repeat="item view/events">
                              <a tal:content="item/title"
                                 tal:attributes="href item/absolute_url"
                                  ></a>
                         </li>
                      </ul>
                    </div>
                </div>
                <div class="col-md-4" tal:condition="view/activities">
                    <div class="card" style="width: 18rem;">
                      <div class="card-header">
                        Activities
                      </div>
                      <ul class="list-group list-group-flush">
                          <li class="list-group-item"
                                     tal:repeat="item view/activities">
                              <a tal:content="item/title"
                                 tal:attributes="href item/absolute_url"
                                  ></a>
                         </li>
                      </ul>
                      </div>
                </div>
                <div class="col-md-4" tal:condition="view/resources">
                    <div class="card" style="width: 18rem;">
                      <div class="card-header">
                        Resources
                      </div>
                          <ul class="list-group list-group-flush">
                                  <li class="list-group-item"
                                         tal:repeat="item view/resources">
                                  <!-- countries/type metadat to be
                                      added later -->
                                  <!--span
                                          tal:content="item/resource_type"
                                          /> -->
                                  <a tal:content="item/title"
                                     tal:attributes="href item/absolute_url"
                                      ></a>
                             </li>
                          </ul>
                      </div>
                </div>

          </div>
        </div>

    </metal:block>
</body>
</html>
