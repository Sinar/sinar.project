<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="sinar.project"
      metal:use-macro="context/main_template/macros/master">
<body>
    <metal:block fill-slot="content-core">

        <table class="listing" summary="Project Summary">
            <tr class="odd">
                <td>Start Date</td>
                <td tal:content="context/project_start_date | nothing"></td>
            </tr>
            <tr class="even">
                <td>End Date</td>
                <td tal:content="context/project_end_date | nothing"></td>
            </tr>

        </table>
        
        <div tal:content="structure context/text/output | nothing"></div>


        <h2 tal:condition="view/updates">Updates</h2>

        <div class="container" tal:condition="view/updates">
            <div class="row align-items-start">
                <div class="col-md-3"
                     tal:repeat="item view/updates">
                  <img tal:condition="item/image"
                   tal:attributes="src string:
                   ${item/absolute_url}/@@images/image/large"
                    src="..." class="card-img-top" />
                    <div class="card mb-3">
                        <div class="card-header">
                        <span tal:content="item/title | nothing">
                        </div>
                        <div class="card-footer">
                            <a href="" tal:attributes="href item/absolute_url"
                               class="">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h2 tal:condition="view/events">Events</h2>

        <div class="container" tal:condition="view/events">
            <div class="row align-items-start">
                <div class="col-md-3"
                     tal:repeat="item view/events">
                  <img tal:condition="item/image"
                   tal:attributes="src string:
                   ${item/absolute_url}/@@images/image/large"
                    src="..." class="card-img-top" />
                    <div class="card mb-3">
                        <div class="card-header">
                        <span tal:content="item/title | nothing">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h2 tal:condition="view/resources">Resources</h2>

        <div class="card mb-3" style="max-width: 1024px;" tal:repeat="item view/resources">
          <div class="row g-0">
            <div class="col-md-4">

              <img tal:condition="item/image"
                   tal:attributes="src string:
                   ${item/absolute_url}/@@images/image/large"
                src="..." class="img-fluid rounded-start" />
                
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title" tal:content="item/title">Card title</h5>
                <small class="text-body-secondary"
                    tal:content="python:item.effective().strftime('%d %B %Y')">
                    Published on 
                </small>
                <p class="card-text" tal:content="item/description">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                            <a href="" tal:attributes="href item/absolute_url"
                               class="">Read More</a>


              </div>
            </div>
          </div>
        </div> 

    </metal:block>
</body>
</html>
