<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="sinar.project"
      metal:use-macro="context/main_template/macros/master">
<body>
    <metal:block fill-slot="content-core">

    <h5>Project Summary</h5>
        <table class="table table-striped table-bordered" summary="Project Summary">
            <tr class="odd">
                <td>Start Date</td>
                <td tal:content="context/project_start_date | nothing"></td>
            </tr>
            <tr class="even">
                <td>End Date</td>
                <td tal:content="context/project_end_date | nothing"></td>
            </tr>

        </table>

        
        <div tal:content="structure context/text/output | nothing"></div>


        <h5>Activities</h5>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Activity</th>
                    <th scope="col">Type</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody tal:repeat="activity view/activities">
                <tr>
                    <td> <a class="link-light" tal:attributes="href
                            activity/absolute_url"
                                                  tal:content="activity/title
                                                               | nothing"></a></td>
                    <td tal:content="python:
                        view.activity_type(activity.activity_types[0])"></td>
                    <td tal:content="python: view.activity_status(activity.activity_status)"></td>
                </tr>
            </tbody>
        </table>

        <div class="container" id="updates-title" tal:condition="view/updates">
                    <h5>Updates</h5>
                </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
          <div class="col" tal:repeat="item view/updates">
            <div class="card h-100" >
               <img tal:condition="item/image"
                    tal:attributes="src string: ${item/absolute_url}/@@images/image/large"
                    src="..." class="card-img-top rounded-top" />
                <div class="card-body">
                  <h5 class="card-title" tal:content="item/title|nothing">Card title</h5>
                </div>
                <div class="card-footer">
                    <a href="" tal:attributes="href item/absolute_url"
                       class="">Read More</a>
                </div>
            </div>
          </div>
        </div>

        <div class="text-center" id="view-all-updates">
                    <a class="btn btn-secondary" tal:attributes="href context/project_updates_collection/to_object/absolute_url"
                       tal:condition="context/project_updates_collection | nothing"
                    href="http://">View all updates</a>
                </div>


        <div tal:condition="view/events" id="events-title" class="container">
                    <h5>Events</h5>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-3">
          <div class="col" tal:repeat="item view/events">
            <div class="card h-100" >
               <img tal:condition="item/image"
                    tal:attributes="src string: ${item/absolute_url}/@@images/image/large"
                    src="..." class="card-img-top rounded-top" />
                <div class="card-body">
                       <a href="" tal:attributes="href
                           item/absolute_url">
                        <strong tal:content="item/title | nothing">
                            <br />
                        </a>
                        <small class="text-body-secondary"
                            tal:content="python: plone_view.toLocalizedTime(item.start, long_format=1) ">
                        </small><span talcondition="item/location">
                            <br /></span><small
                            class="text-body-secondary"
                        tal:content="item/location|nothing"></small>

                </div>
            </div>
          </div>
        </div>
    
        <div class="text-center" id="view-all-events">
                    <a class="btn btn-secondary" tal:attributes="href
                                       context/project_events_collection/to_object/absolute_url
                                       | nothing"
                       tal:condition="context/project_events_collection| nothing"
                       href="">View all events</a>
        </div>

        <div tal:condition="view/resources" class="container"
             id="resources-title">
                    <h5>Resources</h5>
        </div>


        <div class="card mb-3" style="max-width: 1000px;" tal:repeat="item view/resources">
          <div class="row g-0">
            <div class="col-md-3">

              <a href="" tal:attributes="href item/absolute_url">
              <img tal:condition="item/image"
                   tal:attributes="src string:
                   ${item/absolute_url}/@@images/image/mini"
                src="..." class="img-fluid rounded-start" />
              </a>
                
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <strong class="card-title" tal:content="item/title">Card
                    title</strong>
                <br />
                <small class="text-body-secondary"
                    tal:content="python:item.effective().strftime('%d %B %Y')">
                    Published on 
                </small>
                <small class="card-text"
                    tal:content="item/description">This is a wider card
                       with supporting text below as a natural lead-in
                       to additional content. This content is a little
                       bit longer.</small>
                            <a href="" tal:attributes="href item/absolute_url"
                               class="">Read More</a>


              </div>
            </div>
          </div>
        </div> 

        <div class="text-center" id="view-all-resources">
                    <a class="btn btn-secondary" tal:attributes="href
                                       context/project_resources_collection/to_object/absolute_url
                                       | nothing"
                       tal:condition="context/project_resources_collection
                                      | nothing"
                    href="">View all resources</a>
        </div>


    </metal:block>
</body>
</html>
